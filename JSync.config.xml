<!--
This is an example of configuration for the JSync utility,
Here there is only one task define, but many can be defined.

I use it to sync my Java projects with box.com via DAV: I mount
the box.com FS to my local Linux FS, and JSync do the job.
-->

<?xml version="1.0" encoding="UTF-8"?>
<root>
    <task>
        <origin>/home/peyrona/proyectos/Balata/bookedup</origin>
        <destination>/home/peyrona/var/proyectos/Balata/bookedup</destination>
        <max_file_size>10000</max_file_size>       <!-- In Kb -->
        <ignore_file_ext>.jar</ignore_file_ext>
        <ignore_file_ext>.war</ignore_file_ext>
        <ignore_file_ext>.ear</ignore_file_ext>
        <ignore_file_ext>.zip</ignore_file_ext>
        <ignore_file_ext>.7z</ignore_file_ext>
        <ignore_file_ext>.tar</ignore_file_ext>
        <ignore_folder>lib</ignore_folder>
        <ignore_folder>.svn</ignore_folder>
        <ignore_folder>build</ignore_folder>
        <ignore_folder>dist</ignore_folder>
        <ignore_folder>target</ignore_folder>
    </task>
</root>
